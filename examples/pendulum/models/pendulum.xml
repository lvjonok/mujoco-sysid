<mujoco model="pendulum">
  <compiler angle="radian"/>

  <option timestep="0.00200049" iterations="1" ls_iterations="10"/>

  <default>
    <joint damping="0.001" frictionloss="0.002"/>
  </default>

  <worldbody>
    <geom name="floor" size="1 1 0.1" type="plane" rgba="0.9 0.9 0.9 1"/>
    <body name="pendulum_body" pos="0 0 0.5">
      <joint name="hinge" pos="0 0 0" axis="0 1 0" damping="0.000990475" frictionloss="0.00514049"/>
      <geom name="rod" size="0.01 0.05" pos="0 0 -0.05" type="capsule"/>
      <geom name="mass" size="0.01" pos="0 0 -0.1" mass="0.1" rgba="1 0 0 1"/>
    </body>
  </worldbody>

  <actuator>
    <general name="torque" joint="hinge" ctrllimited="true" ctrlrange="-1 1"/>
  </actuator>
</mujoco>
